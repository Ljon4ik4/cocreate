:root
  --palette-width: 32px
  --palette-offset-width: var(--palette-width)

body
  font-family: 'Merriweather', serif
  touch-action: none  // Prevent mobile zooming

#board
  position: absolute
  overflow: hidden
  top: 0
  left: var(--palette-offset-width)
  width: calc(100% - var(--palette-offset-width))
  height: 100%

  cursor: url(/fa/pencil-alt-solid.svg) 0 31, crosshair
  touch-action: none  // PointerEvents only

#palette
  position: absolute
  overflow-x: hidden
  overflow-y: auto
  left: 0
  width: var(--palette-offset-width)
  height: 100%
  background: #cccccc

.tool, .color
  width: var(--palette-width)
  height: var(--palette-width)
  border: 2px outset #cccccc
  cursor: pointer

  &.selected
    border: 3px inset #cccccc

.tool
  padding: 2px

.highlight
  opacity: 50%
  pointer-events: none
