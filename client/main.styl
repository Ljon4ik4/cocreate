:root
  --palette-size: 32px
  // The following grow to accomodate scrollbars if needed:
  --palette-offset-width: var(--palette-size)
  --palette-offset-height: var(--palette-size)
  --palette-color: #ccc

body
  font-family: 'Merriweather', serif
  touch-action: none  // Prevent mobile zooming

.board
  position: absolute
  overflow: hidden
  top: 0
  left: var(--palette-offset-width)
  width: calc(100% - var(--palette-offset-width))
  height: calc(100% - var(--palette-offset-height))

  cursor: crosshair
  touch-action: none  // PointerEvents only

.palette
  position: absolute
  background: var(--palette-color)
  display: flex
.vertical.palette
  flex-direction: column
  overflow-x: hidden
  overflow-y: auto
  left: 0
  width: var(--palette-offset-width)
  height: calc(100% - var(--palette-offset-height))
.horizontal.palette
  flex-direction: row
  overflow-x: auto
  overflow-y: hidden
  bottom: 0
  width: 100%
  height: var(--palette-offset-height)
  &#historyRange
    margin: 0 10px

.tool, .color, .width
  flex: none
  width: var(--palette-size)
  height: var(--palette-size)
  border: 2px outset #ccc
  cursor: pointer

  &.selected
    background: rgba(0,0,0,0.25)
    border: 3px inset rgba(0,0,0,0.25)

.width
  display: flex
  justify-content: center
  align-items: center
  line
    stroke: var(--currentColor)

.tool
  padding: 2px

.highlight
  opacity: 0.5
  pointer-events: none

body:not(.history)
  .historyShow
    visibility: hidden
body.history
  --palette-color: #d6bc9f  // sepia-like
  .historyHide
    visibility: hidden
